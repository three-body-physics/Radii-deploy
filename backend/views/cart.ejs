<%- include('./partials/header') %>

<div class="container-fluid" id="cart-page">
	<div class="row">
		<h3>Cart</h3>
		<hr>
		

		<div class="col-xs-12 col-md-8 col-md-offset-2">
			<% if (order) { %>
			<h4>items</h4>
			<% var price = Math.round(order.price * 100) / 100 %>
			<div class="row">			
			<% order.products.forEach(function(p){ %>
						
				<p> <a href="/home/products/<%= p.product._id %>"><%= p.product.label %></a> x <%= p.quantity  %></p>			
			<% }); %>
			<hr>
			<p>Total: Â£ <%=  price  %> </p>
			<form action="/home/cart/checkout" method="GET">			
  			<input type="submit" class="btn btn-primary-transparent" value="Place order">
			</form>
			</div>
			<% } else { %>
			<h4>Your Cart is empty</h4>
			<% } %>
		</div>
	</div>
</div>



<%- include('./partials/footer') %>